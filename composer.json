{
    "name": "oro/api-doc-bundle",
    "description": "Fork of nelmio/NelmioApiDocBundle to make 2.x version compatible with Symfony 5",
    "keywords": ["api", "documentation", "doc", "rest"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Nelmio",
            "homepage": "http://nelm.io"
        },
        {
            "name": "Symfony Community",
            "homepage": "https://github.com/nelmio/NelmioApiDocBundle/contributors"
        },
        {
            "name": "Oro Community",
            "homepage": "https://github.com/oroinc/NelmioApiDocBundle/contributors"
        }
    ],
    "require": {
        "php": "~8.0",
        "symfony/twig-bundle": "~4.4|~5.3",
        "symfony/framework-bundle": "~4.4|~5.3",
        "symfony/console": "~4.4|~5.3",
        "michelf/php-markdown": "~1.9"
    },
    "conflict": {
        "jms/serializer": "<0.12",
        "jms/serializer-bundle": "<0.11",
        "twig/twig": "<1.12"
    },
    "require-dev": {
        "symfony/css-selector": "~5.3",
        "symfony/browser-kit": "~5.3",
        "symfony/validator": "~5.3",
        "symfony/yaml": "~5.3",
        "symfony/form": "~5.3",
        "symfony/finder": "~5.3",
        "symfony/serializer": "~5.3",
        "doctrine/orm": "~2.8.1",
        "doctrine/doctrine-bundle": "~2.2.4",
        "friendsofsymfony/rest-bundle": "~3.0.5",
        "jms/serializer-bundle": "3.8.0",
        "dunglas/api-bundle": "~1.0",
        "sensio/framework-extra-bundle": "~5.6.1",
        "symfony/phpunit-bridge": "~5.3"
    },
    "suggest": {
        "symfony/form": "For using form definitions as input.",
        "symfony/validator": "For making use of validator information in the doc.",
        "friendsofsymfony/rest-bundle": "For making use of REST information in the doc.",
        "dunglas/api-bundle": "For making use of resources definitions of DunglasApiBundle.",
        "jms/serializer": "For making use of serializer information in the doc."
    },
    "autoload": {
        "psr-0": { "Nelmio\\ApiDocBundle": "" }
    },
    "target-dir": "Nelmio/ApiDocBundle",
    "extra": {
        "branch-alias": {
            "dev-2.x": "2.14-dev"
        }
    }
}
